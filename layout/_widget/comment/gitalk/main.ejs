<!-- Gitalk container. -->
<div id="gitalk-container"></div>
<link rel="stylesheet" href="https://mirrors.sustech.edu.cn/cdnjs/ajax/libs/gitalk/1.8.0/gitalk.css">
<script src="https://mirrors.sustech.edu.cn/cdnjs/ajax/libs/gitalk/1.8.0/gitalk.min.js"></script>

<script>
    var gitalk = new Gitalk({
            clientID: '<%= theme.comment.gitalk_client_id %>',
            clientSecret: '<%= theme.comment.gitalk_client_secret %>',
            repo: '<%= theme.comment.gitalk_repo %>',
            owner: '<%= theme.comment.gitalk_owner %>',
            admin: ['<%= theme.comment.gitalk_owner %>'],
            // facebook-like distraction free mode
            distractionFreeMode: false
        })
   gitalk.render('gitalk-container')
</script>